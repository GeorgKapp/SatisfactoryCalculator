<UserControl x:Class="SatisfactoryCalculator.Source.UI.UserControls.FactoryConfigurationDropDownControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:models="clr-namespace:SatisfactoryCalculator.Source.Models"
             mc:Ignorable="d"
             x:ClassModifier="internal"
             d:DesignHeight="300" d:DesignWidth="300"
             x:Name="userControl">
    
    <UserControl.Resources>
        <DataTemplate DataType="{x:Type models:FactoryConfiguration}">
            <TextBlock Text="{Binding}" />
        </DataTemplate>
    </UserControl.Resources>

    <StackPanel Orientation="Vertical">
        
        <ItemsControl ItemsSource="{Binding FactoryConfigurations, ElementName=userControl}"/>
        
        <TextBlock Text="+"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"
                   Margin="10"
                   FontSize="20"
                   FontWeight="Bold"
                   Cursor="Hand"
                   MouseDown="OnCreateNewMouseDown"/>
    </StackPanel>
    
</UserControl>
